{% extends 'base.html.twig' %}

{% block title %}New Payment
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset("/checkout.css") }}">
{% endblock %}

{% block body %}
	<h1>New payment</h1>
	<form id="address-form">
		<h3>Address</h3>
		<div
			id="address-element"><!-- Elements will create form elements here -->
		</div>
	</form>
	<form id="payment-form">
		<div
			id="link-authentication-element"><!--Stripe.js injects the Link Authentication Element-->
		</div>
		<div
			id="payment-element"><!--Stripe.js injects the Payment Element-->
		</div>
		<div id="payment-message" class="hidden"></div>
		<button id="submit">
			<div class="spinner hidden" id="spinner"></div>
			<span id="button-text">Pay now</span>
		</button>
	</form>
{% endblock %}

{% block javascript %}
	<script src="{{ asset("/checkout.js") }}"></script>
{% endblock %}
